{$R *.dfm}


procedure TForm1.ButtonSatuClick(Sender: TObject);
begin
if  Edit1.Text = '0' then
    Edit1.Text := '1'
else
    Edit1.Text := Edit1.Text + '1';
end;

procedure TForm1.ButtonDuaClick(Sender: TObject);
begin
if  Edit1.Text = '0' then
